{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "tsBuildInfoFile": "lib/tsconfig.tsbuildinfo",

    "emitDeclarationOnly": false,
    "target": "ES2022",
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "noUncheckedIndexedAccess": true,
    "lib": ["es2022"],
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "sourceMap": true
  },
  "include": ["src/**/*"]
}
